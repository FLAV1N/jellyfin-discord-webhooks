{
    "content": "{{MentionType}}",
    "avatar_url": "{{AvatarUrl}}",
    "username": "{{{BotUsername}}}",
    "embeds": [
        {   
            {{#if_equals ItemType 'Season'}}
                "title": "New Season • {{{SeriesName}}} {{{Name}}}",
            {{/if_equals}}

            {{#if_equals ItemType 'Episode'}}
                "title": "New Episode • {{{SeriesName}}} S{{SeasonNumber00}}E{{EpisodeNumber00}} ~ {{{Name}}}",
            {{/if_equals}}

            {{#if_equals ItemType 'Movie'}}
                "title": "New Movie • {{{Name}}} ({{Year}})",
            {{/if_equals}}

            "thumbnail":{
                "url": "{{ServerUrl}}/Items/{{ItemId}}/Images/Primary"
            },

            "description": "
            {{~#if_exist Overview~}}
                > {{Overview}}\n\n
            {{~/if_exist~}}

            {{~#if_exist ServerUrl~}}
                [**Watch Now** ]({{ServerUrl}}/web/index.html#!/details?id={{ItemId}}&serverId={{ServerId}})
            {{~/if_exist~}}

            {{~#if_exist Provider_imdb~}}
                • [**IMDb**](https://www.imdb.com/title/{{Provider_imdb}}/)
            {{~/if_exist~}}

            ",

            "color": "3381708",

            "footer": {
                "text": "{{{ServerName}}} • {{Timestamp}}",
                "icon_url": "{{AvatarUrl}}"
            }
        }
    ]
}