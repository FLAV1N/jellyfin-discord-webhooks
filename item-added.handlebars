{
    "content": "{{MentionType}}",
    "avatar_url": "{{AvatarUrl}}",
    "username": "{{{BotUsername}}}",
    "embeds": [
        {   
            {{#if_equals ItemType 'Season'}}
                "title": "New Season • {{{SeriesName}}} {{{Name}}}",
            {{else}}
                {{#if_equals ItemType 'Episode'}}
                    "title": "New Episode • {{{SeriesName}}} S{{SeasonNumber00}}E{{EpisodeNumber00}} ~ {{{Name}}}",
                {{else}}
                    "title": "New Movie • {{{Name}}} ({{Year}})",
                {{/if_equals}}
            {{/if_equals}}

            "thumbnail":{
                "url": "{{ServerUrl}}/Items/{{ItemId}}/Images/Primary"
            },

            "description": "**Description:** \n> {{Overview}}",

            "color": "{{EmbedColor}}",

            "footer": {
                "text": "{{{ServerName}}} • {{Timestamp}}",
                "icon_url": "{{AvatarUrl}}"
            }
        }
    ]
}