{
    "content": "{{MentionType}}",
    "avatar_url": "{{ServerUrl}}/Users/{{UserId}}/Images/Primary",
    "username": "{{NotificationUsername}}",
    "embeds": [
        {
            {{#if_equals ItemType 'Episode'}}
                {{#if_equals PlayedToCompletion true}}
                    "title": "Playback Completed • {{{SeriesName}}} S{{SeasonNumber00}}E{{EpisodeNumber00}} ~ {{{Name}}}",
                {{else}}
                    "title": "Playback Ended • {{{SeriesName}}} S{{SeasonNumber00}}E{{EpisodeNumber00}} ~ {{{Name}}}",
                {{/if_equals}}
                
            {{else}}
                {{#if_equals PlayedToCompletion true}}
                    "title": "Playback Completed • {{{Name}}} ({{Year}})",
                {{else}}
                    "title": "Playback Ended • {{{Name}}} ({{Year}})",
                {{/if_equals}}
                
            {{/if_equals}}

            "thumbnail":{
                "url": "{{ServerUrl}}/Items/{{ItemId}}/Images/Primary"
            },

            "description": "> {{Overview}}\n\n``[{{PlaybackPosition}}/{{RunTime}}]``",

            {{#if_equals PlayedToCompletion true}}
                "color": "3381759",
            {{else}}
                "color": "15737923",
            {{/if_equals}}
            

            "footer": {
                "text": "{{{ServerName}}} • {{Timestamp}}",
                "icon_url": "{{AvatarUrl}}"
            }
        }
    ]
}